                        </a>
                    </li>
                </ul>
                <!-- End Navbar Toolbar -->
                <!-- Navbar Toolbar Right -->
                <ul class="nav navbar-toolbar navbar-right navbar-toolbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" data-animation="scale-up" aria-expanded="false" role="button">
                            <span class="flag-icon flag-icon-us"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li role="presentation">
                                <a href="@Url.Action("ChangeIdioma", "Home", new { Idioma = ConstantHelpers.CULTURE.INGLES })" role="menuitem">
                                    <span class="flag-icon flag-icon-gb"></span> English
                                </a>
                            </li>
                            <li role="presentation">
                                <a href="@Url.Action("ChangeIdioma", "Home", new { Idioma = ConstantHelpers.CULTURE.ESPANOL })" role="menuitem">
                                    <span class="flag-icon flag-icon-es"></span> Spanish
